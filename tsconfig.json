{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": false,
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ],
    "baseUrl": "./src"
  },
  "parcelTsPluginOptions": {
    "transpileOnly": true
  }
}
